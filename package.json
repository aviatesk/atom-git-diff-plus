{
  "name": "git-diff-plus",
  "version": "0.4.0",
  "main": "./lib/main",
  "description": "git-diff alternative",
  "repository": "https://github.com/aviatesk/atom-git-diff-plus",
  "license": "MIT",
  "author": "Originally developed by GitHub Inc. and later modified by KADOWAKI, Shuhei",
  "keywords": [
    "git",
    "diff",
    "plus",
    "project",
    "status bar"
  ],
  "configSchema": {
    "showDiffsInStatusBar": {
      "type": "boolean",
      "default": true,
      "description": "If true, shows diffs also in Status Bar",
      "order": 1
    },
    "showIconsInEditorGutter": {
      "type": "boolean",
      "default": false,
      "description": "Shows colored icons for added (`+`), modified (`Â·`) and removed (`-`) lines in the editor's gutter, instead of colored markers (`|`).",
      "order": 2
    },
    "wrapAroundOnMoveToDiff": {
      "type": "boolean",
      "default": true,
      "description": "Wraps around to the first/last diff in the file when moving to next/previous diff.",
      "order": 3
    }
  },
  "engines": {
    "atom": ">=1.37.0 <2.0.0"
  },
  "scripts": {
    "eslint": "eslint --fix \"./{lib,spec}/**/*.js\"",
    "prettier": "prettier --write \"./lib/**/*.js\" \"./spec/**/*.js\""
  },
  "dependencies": {
    "atom-select-list": "^0.7.0",
    "fs-plus": "^3.0.0",
    "temp": "^0.9.0"
  },
  "consumedServices": {
    "status-bar": {
      "versions": {
        "^1.0.0": "consumeStatusBar"
      }
    }
  },
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-standard": "^14.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^3.0.0",
    "lint-staged": "^9.0.2",
    "prettier": "^1.18.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{lib,spec}/**/*.js": [
      "prettier --write",
      "git add"
    ]
  }
}
